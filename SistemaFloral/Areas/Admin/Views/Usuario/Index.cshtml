@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-success">Lista de Usuarios</h2>
    </div>
    <div class="col-lg-6 d-flex justify-content-end align-items-center">
        <a class="btn btn-outline-success" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-plus-circle-fill"></i> Crear Nuevo Usuario
        </a>
    </div>
</div>

<br />

<div class="p-4 rounded bg-light" style="box-shadow: 0px 0px 10px rgba(11, 83, 69, 0.5);">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table" style="background-color:rgba(25, 135, 84); color:white">
            <tr>
                <th>Emai</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Telefono</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/usuario.js"></script>
}