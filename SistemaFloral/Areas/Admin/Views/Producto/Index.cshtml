
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-success">Lista de Productos</h2>
    </div>
    <div class="col-lg-6 d-flex justify-content-end align-items-center">
        <a class="btn btn-outline-success" asp-action="Upsert"><i class="bi bi-plus-circle-fill"></i> Crear Nuevo Producto</a>
    </div>
</div>

<br/>

<div class="p-4 rounded bg-light" style="box-shadow: 0px 0px 10px rgba(11, 83, 69, 0.5);">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table" style="background-color:rgba(25, 135, 84); color:white">
            <tr>
                <th>Numero Serie</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Ocasion</th>
                <th>Costo</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/producto.js"></script>
}